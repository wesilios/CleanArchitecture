{
  "$schema": "http://json.schemastore.org/template",
  "author": "Que Nguyen",
  "classifications": [
    "ASP.NET",
    "Clean Architecture",
    "DDD",
    "Web",
    "gRPC",
    "Razor Pages",
    "Azure Infrastructure"
  ],
  "identity": "Clean.Architecture.Solution",
  "name": "Clean Architecture Solution",
  "description": "A Clean Architecture Solution Template for creating Web Applications and CI/CD pipeline with ASP.NET Core.",
  "shortName": "cleanarchitecturesln",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sourceName": "CleanArchitecture",
  "preferNameDirectory": true,
  "symbols": {
    "port": {
      "type": "generated",
      "generator": "random",
      "parameters": {
        "min": 5000,
        "max": 65000
      },
      "replaces": "58375"
    },
    "targetFramework": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net8.0",
          "description": ".NET 8.0"
        },
        {
          "choice": "net6.0",
          "description": ".NET 6.0"
        }
      ],
      "defaultValue": "net8.0",
      "replaces": "net8.0",
      "description": "The target framework for the projects solution."
    },
    "database": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "sqlite",
          "description": "SQLite"
        },
        {
          "choice": "sqlserver",
          "description": "SQL Server"
        }
      ],
      "defaultValue": "sqlserver",
      "description": "The database type to use."
    },
    "useAzure": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Whether to use Azure services."
    },
    "useSqlite": {
      "type": "computed",
      "value": "(database == \"sqlite\")"
    },
    "useSqlServer": {
      "type": "computed",
      "value": "(database == \"sqlserver\")"
    },
    "useApi": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Whether to include Web API."
    },
    "useGrpc": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Whether to include gRPC."
    },
    "useRazorPages": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Whether to include Razor Pages."
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        ".vs/**",
        ".vscode/**",
        ".git/**",
        ".github/**",
        ".idea/**",
        ".template.config/**",
        "templates/**",
        "samples/**",
        "**/*.filelist",
        "**/*.user",
        "**/*.lock.json",
        "*.nuspec",
        "README.md",
        "LICENSE",
        "bin/**",
        "obj/**",
        "**/bin/**",
        "**/obj/**"
      ],
      "modifiers": [
        {
          "condition": "(useAzure)",
          "exclude": [
            "src/Applications/CleanArchitecture.Api/appsettings.Development.json"
          ],
          "rename": {
            "src/Presentations/CleanArchitecture.Api/appsettings.UseAzure.json": "src/Presentations/CleanArchitecture.Api/appsettings.Development.json"
          }
        },
        {
          "condition": "(!useApi)",
          "exclude": [
            "src/Presentations/CleanArchitecture.Api/**"
          ]
        },
        {
          "condition": "(!useGrpc)",
          "exclude": [
            "src/Presentations/CleanArchitecture.Grpc/**"
          ]
        },
        {
          "condition": "(!useRazorPages)",
          "exclude": [
            "src/Presentations/CleanArchitecture.Web/**"
          ]
        }
      ]
    }
  ]
}