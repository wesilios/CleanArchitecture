{
  "$schema": "http://json.schemastore.org/template",
  "author": "Que Nguyen",
  "classifications": [
    "ASP.NET",
    "Web",
    "Clean Architecture"
  ],
  "identity": "Clean.Architecture.Solution",
  "name": "Clean Architecture Solution",
  "description": "A Clean Architecture Solution Template for creating Web Applications and CI/CD pipeline with ASP.NET Core.",
  "shortName": "cleanarchitecturesln",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sourceName": "CleanArchitecture",
  "preferNameDirectory": true,
  "symbols": {
    "Database": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "sqlite",
          "description": "SQLite"
        },
        {
          "choice": "sqlserver",
          "description": "SQL Server"
        }
      ],
      "defaultValue": "sqlserver",
      "description": "The database type to use."
    },
    "UseAzure": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Whether to use Azure services."
    },
    "UseSqlite": {
      "type": "computed",
      "value": "(Database == \"sqlite\")"
    },
    "UseSqlServer": {
      "type": "computed",
      "value": "(Database == \"sqlserver\")"
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        ".vs/**",
        ".vscode/**",
        ".git/**",
        ".github/**",
        ".idea/**",
        ".template.config/**",
        "templates/**",
        "samples/**",
        "**/*.filelist",
        "**/*.user",
        "**/*.lock.json",
        "*.nuspec",
        "README.md",
        "LICENSE",
        "bin/**",
        "obj/**",
        "**/bin/**",
        "**/obj/**"
      ],
      "modifiers": [
        {
          "condition": "(UseSqlServer)",
          "include": [
            "src/Applications/Application/appsettings.Development.json"
          ]
        },
        {
          "condition": "(UseSqlite)",
          "include": [
            "src/Applications/Application/appsettings.Development.json"
          ]
        },
        {
          "condition": "(UseAzure)",
          "rename": {
            "src/Applications/Application/appsettings.UseAzure.json": "src/Applications/Application/appsettings.Development.json"
          }
        }
      ]
    }
  ]
}